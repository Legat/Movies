<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/MovieToolbar"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                style="@style/DetailMoviesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableLeft="@drawable/background_movie_list"
                android:text="@string/movie_list"
                android:layout_marginStart="16dp"/>

    </androidx.appcompat.widget.Toolbar>

    <!--<androidx.cardview.widget.CardView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:cardCornerRadius="7dp"-->
            <!--app:cardElevation="5dp"-->
            <!--app:cardPreventCornerOverlap="false"-->
            <!--android:id="@+id/cardView">-->

    <ImageView
            android:id="@+id/movie_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/background_list_movie"
            android:scaleType="fitStart"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="14dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            >
    </ImageView>

    <TextView
            style="@style/DetailMoviesText"
            android:text="@string/movie_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_age_limit"
            app:layout_constraintStart_toStartOf="@+id/movie_item"
            android:layout_marginStart="6dp"
            app:layout_constraintTop_toTopOf="@+id/movie_item"
            android:layout_marginTop="12dp"
            android:id="@+id/textView3"/>


    <ImageView
            android:src="@drawable/ic_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            app:layout_constraintTop_toTopOf="@+id/movie_item"
            app:layout_constraintEnd_toEndOf="@+id/movie_item"
            android:layout_marginEnd="6dp"/>

    <RatingBar
            android:id="@+id/movie_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:progressTint="@color/crimson"
            android:rating="5"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/movie_item"
            app:layout_constraintStart_toStartOf="@+id/movie_item"
            android:layout_marginStart="6dp"/>
    <TextView
            style="@style/DetailMoviesText"
            android:text="@string/movie_reviews"
            android:textColor="@color/grey"
            android:textSize="@dimen/extra_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/review"
            app:layout_constraintStart_toEndOf="@+id/movie_rating"
            android:layout_marginStart="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/movie_rating"
            app:layout_constraintTop_toTopOf="@+id/movie_rating"/>

    <TextView
            android:id="@+id/genre"
            style="@style/DetailMoviesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_genre"
            android:textColor="@color/crimson"
            android:textSize="@dimen/extra_small_text"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/movie_rating"
            app:layout_constraintStart_toStartOf="@+id/movie_item"
            android:layout_marginStart="6dp"/>

    <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/item_radial_gardient"
            app:layout_constraintTop_toBottomOf="@+id/movie_item"
            app:layout_constraintEnd_toEndOf="@+id/movie_item"
            app:layout_constraintStart_toStartOf="@+id/movie_item"
            android:id="@+id/view2"/>

     <TextView
            style="@style/DetailMoviesText"
            android:id="@+id/movie_name"
            android:text="@string/movie_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/view2"
            app:layout_constraintStart_toStartOf="@+id/view2"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/view2"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <TextView
            style="@style/DetailMoviesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/movie_time"
            android:textSize="@dimen/extra_small_text"
            android:textColor="@color/grey2"
            android:id="@+id/movie_min"
            app:layout_constraintStart_toStartOf="@+id/view2"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/view2"/>

    <!--</androidx.cardview.widget.CardView>-->


</androidx.constraintlayout.widget.ConstraintLayout>